<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">


	<!-- Servlets -->
	<servlet>
		<servlet-name>contactInfoServlet</servlet-name>
		<servlet-class>org.gcube.portlets.user.contactinformation.server.ContactInfoServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>contactInfoServlet</servlet-name>
		<url-pattern>/contactinfo/contact</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>ContactInfo.html</welcome-file>
	</welcome-file-list>

</web-app>

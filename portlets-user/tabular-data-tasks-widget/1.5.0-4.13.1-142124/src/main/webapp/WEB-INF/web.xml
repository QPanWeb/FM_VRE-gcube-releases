<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>


	<servlet>
		<servlet-name>tabularDataTasksWidgetService</servlet-name>
		<servlet-class>org.gcube.portlets.user.td.taskswidget.server.TdTasksWidgetServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>jUnitHostImpl</servlet-name>
		<servlet-class>com.google.gwt.junit.server.JUnitHostImpl</servlet-class>
	</servlet>

	<!-- GWT TABULAR DATA SERVICE -->
	<servlet>
		<servlet-name>TDGWTService</servlet-name>
		<servlet-class>org.gcube.portlets.user.td.gwtservice.server.TDGWTServiceImpl</servlet-class>
	</servlet>

	<!-- Servlets Mapping -->
	<servlet-mapping>
		<servlet-name>tabularDataTasksWidgetService</servlet-name>
		<url-pattern>/org.gcube.portlets.user.td.taskswidget.TdTasksWidgetJUnit/TdTasksWidget/tabularDataTasksService</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>tabularDataTasksWidgetService</servlet-name>
		<url-pattern>/TdTasksWidget/tabularDataTasksService</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>TDGWTService</servlet-name>
		<url-pattern>/TdTasksWidget/TDGWTService</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>jUnitHostImpl</servlet-name>
		<url-pattern>/org.gcube.portlets.user.td.taskswidget.TdTasksWidgetJUnit/junithost/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>jUnitHostImpl</servlet-name>
		<url-pattern>/TdTasksWidget/junithost/*</url-pattern>
	</servlet-mapping>


	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>TdTasksWidget.html</welcome-file>
	</welcome-file-list>

</web-app>
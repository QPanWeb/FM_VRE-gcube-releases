<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xmlns="http://java.sun.com/xml/ns/javaee">

	<display-name>Gcube Releases Web Application</display-name>

	<listener>
		<description>GcubeReleasesSessionListener</description>
		<listener-class>
			org.gcube.portlets.admin.gcubereleases.server.GcubeReleasesSessionListener
		</listener-class>
	</listener>

	<!-- Servlets -->
	<servlet>
		<servlet-name>gcubeReleases</servlet-name>
		<servlet-class>org.gcube.portlets.admin.gcubereleases.server.GcubeReleasesServiceImpl</servlet-class>
	</servlet>

	<!-- Servlets -->
	<servlet>
		<servlet-name>javadocResolver</servlet-name>
		<servlet-class>org.gcube.portlets.admin.gcubereleases.server.JavadocResolver</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>gcubeReleases</servlet-name>
		<url-pattern>/GcubeReleasesApp/gcubeReleases</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>javadocResolver</servlet-name>
		<url-pattern>/GcubeReleasesApp/javadocResolver</url-pattern>
	</servlet-mapping>


	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>GcubeReleasesApp.html</welcome-file>
	</welcome-file-list>

</web-app>

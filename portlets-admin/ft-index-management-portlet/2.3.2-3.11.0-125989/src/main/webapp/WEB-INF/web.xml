<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
<servlet>
    <servlet-name>ManagementService</servlet-name>
    <servlet-class>org.gcube.portlets.admin.fulltextindexportlet.gwt.server.ManagementServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ManagementService</servlet-name>
    <url-pattern>/ftindexmanagementportlet/MgmtService</url-pattern>
  </servlet-mapping>
  
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>FTIndexManagementPortlet.html</welcome-file>
  </welcome-file-list>

</web-app>

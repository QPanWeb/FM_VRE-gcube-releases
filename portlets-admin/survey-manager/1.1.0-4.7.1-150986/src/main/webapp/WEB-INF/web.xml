<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>it.eng.edison.usersurvey_portlet.server.GreetingServiceImpl</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/Survey/greet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>imageUpload</servlet-name>
		<servlet-class>it.eng.edison.usersurvey_portlet.server.ImageUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>imageUpload</servlet-name>
		<url-pattern>/Survey/imageUpload</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>exportCSV</servlet-name>
		<servlet-class>it.eng.edison.usersurvey_portlet.server.ExportCSVServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>exportCSV</servlet-name>
		<url-pattern>/Survey/exportCSV</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>imageDownloadFromServer</servlet-name>
		<servlet-class>it.eng.edison.usersurvey_portlet.server.ImageDownloadFromServerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>imageDownloadFromServer</servlet-name>
		<url-pattern>/Survey/imageDownloadFromServer</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>Survey.html</welcome-file>
	</welcome-file-list>
</web-app>
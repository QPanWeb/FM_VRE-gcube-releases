		</dependency>

		<dependency>
			<groupId>org.gcube.core</groupId>
			<artifactId>common-gcube-calls</artifactId>
			<scope>provided</scope>
		</dependency>

		<!-- <dependency> <groupId>org.gcube.data.transfer</groupId> <artifactId>agent-library</artifactId> 

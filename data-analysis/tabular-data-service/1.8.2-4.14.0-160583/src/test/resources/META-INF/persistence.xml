<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<!-- change here if you want name of unit different -->
	<persistence-unit name="tabulardata" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<!-- change here if your class/Entity package different -->
		<class>org.gcube.data.analysis.tabulardata.metadata.tabularresource.StorableTabularResource</class>
		<class>org.gcube.data.analysis.tabulardata.metadata.tabularresource.RuleMapping</class>
		<class>org.gcube.data.analysis.tabulardata.metadata.tabularresource.RelationLink</class>
		<class>org.gcube.data.analysis.tabulardata.metadata.tabularresource.EditEntry</class>
		<class>org.gcube.data.analysis.tabulardata.metadata.notification.StorableNotification</class>
		<class>org.gcube.data.analysis.tabulardata.metadata.StorableHistoryStep</class>
		<class>org.gcube.data.analysis.tabulardata.metadata.StorableTemplate</class>
		<class>org.gcube.data.analysis.tabulardata.metadata.StorableRule</class>
		<class>org.gcube.data.analysis.tabulardata.metadata.task.StorableTask</class>
		<class>org.gcube.data.analysis.tabulardata.task.TaskContext</class>
		<class>org.gcube.data.analysis.tabulardata.metadata.resources.StorableResource</class>
		
		<properties>
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
		</properties>
	</persistence-unit>
</persistence>
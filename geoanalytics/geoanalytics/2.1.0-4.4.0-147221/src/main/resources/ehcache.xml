<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ehcache.xsd" updateCheck="true"
	monitoring="autodetect" dynamicConfig="true">

	<cache name="geoanalyticsCache" maxElementsInMemory="1000000"
		eternal="true" overflowToDisk="false" memoryStoreEvictionPolicy="LRU" />

	<cache name="gr.cite.geoanalytics.security.principalCache"
		maxEntriesLocalHeap="10000" maxEntriesLocalDisk="1000" eternal="false"
		diskSpoolBufferSizeMB="20" timeToIdleSeconds="300" timeToLiveSeconds="600"
		memoryStoreEvictionPolicy="LFU" transactionalMode="off">
		<persistence strategy="localTempSwap" />
	</cache>

	<cache name="gr.cite.geoanalytics.security.principalMetadataCache"
		maxEntriesLocalHeap="10000" maxEntriesLocalDisk="1000" eternal="false"
		diskSpoolBufferSizeMB="20" timeToIdleSeconds="300" timeToLiveSeconds="600"
		memoryStoreEvictionPolicy="LFU" transactionalMode="off">
		<persistence strategy="localTempSwap" />
	</cache>

	<cache name="gr.cite.geoanalytics.security.principalRoleCache"
		maxEntriesLocalHeap="10000" maxEntriesLocalDisk="1000" eternal="false"
		diskSpoolBufferSizeMB="20" timeToIdleSeconds="300" timeToLiveSeconds="600"
		memoryStoreEvictionPolicy="LFU" transactionalMode="off">
		<persistence strategy="localTempSwap" />
	</cache>

	<!-- <cache name="org.hibernate.cache.internal.StandardQueryCache" -->
	<!-- maxElementsInMemory="1000000" -->
	<!-- eternal="true" -->
	<!-- overflowToDisk="false" -->
	<!-- memoryStoreEvictionPolicy="LRU" /> -->

	<defaultCache maxElementsInMemory="1000000" eternal="true"
		diskSpoolBufferSizeMB="30" memoryStoreEvictionPolicy="LRU" statistics="true" />

</ehcache>
	<logger name="org.gcube" level="ERROR" />
	<logger name="org.gcube.informationsystem" level="DEBUG" />
	<logger name="org.gcube.informationsystem.exporter" level="TRACE" />

	<root level="WARN">
		<appender-ref ref="STDOUT" />
	</root>
	
